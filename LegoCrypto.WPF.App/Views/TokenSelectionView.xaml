<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LegoCrypto.WPF.App"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="LegoCrypto.WPF.App.TokenSelectionView"
             mc:Ignorable="d" >
    <Grid>
        <Grid.DataContext>
            <local:TokenSelectionViewModel/>
        </Grid.DataContext>
        <TabControl TabStripPlacement="Left" mah:TabControlHelper.IsUnderlined="True">
            <TabItem Header="Character" mah:ControlsHelper.HeaderFontSize="20">
                <DataGrid ItemsSource="{Binding Characters}" FontSize="14" IsReadOnly="True" />
            </TabItem>
            <TabItem Header="Vehicle" mah:ControlsHelper.HeaderFontSize="20">
                <DataGrid ItemsSource="{Binding Vehicles}" FontSize="14" IsReadOnly="True" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
